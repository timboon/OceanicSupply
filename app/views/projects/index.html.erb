<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1 class="home-h1">Previous Projects</h1>
      <br>
      <p class ="text-center">Oceanic Supply provides services for all areas of the industry, click below links to see some of our previous successful projects.</p>
      <br>
      <ul class="list-unstyled">
        
        <%@project.each do |project|%>
          <li>
            <div class="well row <%= cycle('white-bg', '')%>">
              <div class="col-sm-4 text-center">
                <br>
                  <%= link_to project do %>
                    <%= image_tag project.avatar.url, class:'project-index-avatar' %>
                  <% end %>
              </div>     
              <div class="col-sm-6  col-sm-offset-1">
                <%= link_to project do %>
                  <h2><%= project.title%><br></h2>
                <%end%>
                <%= truncate((project.body), :length => 200)%>
                 <%= link_to project do %>
                 Read more
                 <%end%>
              </div>
              
               <% if admin_signed_in? %>
                <div class="col-sm-1  col-sm-offset-11">
                  
                <%= link_to edit_project_path(project) do %>
                Edit
                <%end%>&nbsp
                  
                  
                <%= link_to "Delete", project_path(id: project.id), method: :delete,
                data: { confirm: "Are you sure you want to delete this project?" } %>
                
                
                
                
                </div>
               <%end%>
            </div>
          </li>
        <%end%>
      </ul>
    </div>
  </div> 
</div>
