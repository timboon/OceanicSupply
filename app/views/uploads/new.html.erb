
<div class="container">
  <div class = "row">
    <div class = "col-md-6 col-md-offset-3">
      <h1 class = "text-center">Add Files to Client Profile</h1>
      <p class ="text-center">Upload a file and choose the Client you want to save it to</p>
      <div class="well">
      
        <%= form_for(@upload) do |f| %>
        
          <div class="form-group">
            <%= f.label "Purchase Order Number" %><br />
            <%= f.text_field :order, class: 'form-control', autofocus: true %>
          </div>
        
        <%= f.label "Select Client" %>
          <%= f.collection_select(:id, User.all, :id, :email, {prompt:true}, {class: 'form-control'}) %>
        <div class="form-group">
          <%= f.label "Select File" %>
          <%= f.file_field :avatar, class: 'form-control' %>
        </div>
        
        <div class="actions">
          <%= f.submit "Add File" %>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</div>