
<div class="container">
  <div class = "row">
    <div class = "col-md-6 col-md-offset-3">
      <h1 class = "text-center">Add a new client</h1>
      <p class ="text-center">Add a new client to the database, specify a login and password for them to access their relevant certificates</p>
      <div class="well">
      

        <%= form_for (@user), :html => { :multipart => true } do |f| %>
          <div class="form-group">
            <%= f.label "Company Name" %><br />
            <%= f.text_field :name, class: 'form-control', autofocus: true %>
          </div>
          
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: 'form-control', autofocus: true %>
          </div>
        
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control',  autocomplete: "off" %>
          </div>
        
          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, class: 'form-control',  autocomplete: "off" %>
          </div>
        
          <div class="form-group">
            <%= f.submit "Add Client", class: 'btn btn-primary'  %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
